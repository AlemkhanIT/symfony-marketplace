{% extends 'base.html.twig' %}

{% block title %}Hello BasketController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="d-flex p-2 gap-3 flex-wrap">

    {% for item in items %}
        <div class="card" style="width: 18rem; max-height: 400px">
            <div class="overflow-hidden h-50">
                <img class="card-img-top img-fluid" src="{{ item.product.imagePath }}" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ item.product.title }}</h5>
                <p class="card-text">{{ item.product.description }}</p>
                <button class="btn btn-danger remove" data-basket-id="{{ item.id }}">Remove from Basket</button>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
